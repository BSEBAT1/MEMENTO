<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gpsphoto.MainActivity"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res/com.example.gpsphoto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00b0f0">

   

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Profile Making"
        android:textColor="#ffffff"
        android:textSize="30dp" >
        
    </TextView>
</RelativeLayout>

	<com.pkmmte.circularimageview.CircularImageView
	    android:id="@+id/btnUser"
	    android:layout_width="150dp"
	    android:layout_height="150dp"
	    android:layout_gravity="center"
	    android:layout_margin="2dp"
	    android:adjustViewBounds="false"
	    android:clickable="true"
	    android:cropToPadding="true"
	    android:src="@drawable/ic_launcher"
	    app:border="true"
	    app:border_color="#FFFFFFFF"
	    app:border_width="4dp"
	    app:selector="true"
	    app:selector_color="#4403a9f4"
	    app:selector_stroke_color="#aa5677fc"
	    app:selector_stroke_width="4dp"
	    app:shadow="true" />

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp">

		<EditText
		    android:id="@+id/txtUserName"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:hint="UserName"
		    android:gravity="center"
		    android:singleLine="true"
		    android:textColor="#000000"
		    android:background="@layout/textbackground"
		    android:textSize="20dp" />

	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp">

		<EditText
		    android:id="@+id/txtPassword"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:hint="Password"
		    android:gravity="center"
		    android:background="@layout/textbackground"
		   	android:password="true"
		    android:singleLine="true"
		    android:textColor="#000000"
		    android:textSize="20dp" />

	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp">

		<EditText
		    android:id="@+id/txtRetypePassword"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:background="@layout/textbackground"
		    android:hint="Retype Password"
		    android:gravity="center"
		    android:password="true"
		    android:singleLine="true"
		    android:textColor="#000000"
		    android:textSize="20dp" />

	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    >
<Button
	    android:id="@+id/btnRegister"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:background="#0c6fa8"
	    android:text="Register"
	    android:textColor="#ffffff" />

	</RelativeLayout>
</LinearLayout>
